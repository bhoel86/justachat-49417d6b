{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "net.justachat.app",
  "productName": "Justachat",
  "directories": {
    "output": "electron-dist",
    "app": "electron",
    "buildResources": "electron/resources"
  },
  "extraMetadata": {
    "name": "justachat",
    "version": "1.0.0",
    "description": "Justachat Desktop - Connect Instantly, Chat Freely",
    "author": "Justachat Team",
    "main": "index.js"
  },
  "files": [
    "index.js",
    "preload.js"
  ],
  "extraResources": [
    {
      "from": "public/jac-favicon.png",
      "to": "icon.png"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/jac-favicon.png",
    "artifactName": "Justachat-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Justachat"
  },
  "portable": {
    "artifactName": "Justachat-Portable-${version}.${ext}"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "public/jac-favicon.png",
    "category": "public.app-category.social-networking",
    "artifactName": "Justachat-${version}-mac.${ext}"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "public/jac-favicon.png",
    "category": "Network;Chat",
    "artifactName": "Justachat-${version}-linux.${ext}"
  },
  "publish": null
}
