# JAC IRC Proxy Configuration

# ===========================================
# DOMAIN & SSL
# ===========================================

DOMAIN=irc.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# ===========================================
# ADMIN API
# ===========================================

ADMIN_TOKEN=your-secure-token-here
ADMIN_PORT=6680

# ===========================================
# PROXY SETTINGS
# ===========================================

HOST=0.0.0.0
PORT=6667
SSL_ENABLED=true
SSL_PORT=6697
LOG_LEVEL=info

# ===========================================
# PERSISTENT STORAGE
# ===========================================

DATA_DIR=/data

# ===========================================
# FILE LOGGING
# ===========================================

LOG_TO_FILE=true
LOG_DIR=/logs
LOG_MAX_SIZE_MB=10
LOG_MAX_FILES=5

# ===========================================
# RATE LIMITING
# ===========================================

RATE_CONN_PER_MIN=5
RATE_MSG_PER_SEC=10
RATE_MSG_BURST=20
RATE_AUTO_BAN=3
RATE_BAN_DURATION=60

# ===========================================
# GEOIP BLOCKING
# ===========================================

GEOIP_ENABLED=false
GEOIP_MODE=block
GEOIP_COUNTRIES=
GEOIP_CACHE_TTL=60
GEOIP_FAIL_OPEN=true
